<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".MainActivity">

    <TextView
        android:id="@+id/listaCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="0dp"
        android:text="Crear categoria"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView_username"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listaCategoria"
        android:layout_alignEnd="@+id/listaCategoria"
        android:layout_alignRight="@+id/listaCategoria"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:text="Categoria"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/idCategoria2"
        android:layout_alignTop="@+id/textView_username"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/botonCrearCat"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_password"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:onClick="createCategoria"
        android:text="Crear" />

    <Button
        android:id="@+id/botonListaCat"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/botonCrearCat"
        android:layout_alignStart="@+id/botonCrearCat"
        android:layout_alignLeft="@+id/botonCrearCat"
        android:layout_alignEnd="@+id/botonCrearCat"
        android:layout_alignRight="@+id/botonCrearCat"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="81dp"
        android:onClick="listaCategorias"
        android:text="Lista Categorias" />
</RelativeLayout>